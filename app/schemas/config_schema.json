{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Billing Config",
  "type": "object",
  "required": ["projectId", "currency", "plans"],
  "additionalProperties": false,
  "properties": {
    "projectId": { "type": "string", "minLength": 1 },
    "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
    "plans": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "cadence", "billing", "strategies"],
        "properties": {
          "code": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "cadence": { "type": "string", "enum": ["month", "year"] },
          "trialDays": { "type": "integer", "minimum": 0 },
          "features": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "seats": { "type": "integer", "minimum": 0 },
              "limits": {
                "type": "object",
                "additionalProperties": { "type": "number", "minimum": 0 }
              }
            }
          },
          "billing": {
            "type": "object",
            "additionalProperties": false,
            "required": ["priceId"],
            "properties": {
              "priceId": { "type": "string", "minLength": 1 }
            }
          },
          "strategies": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "ProrationStrategy",
              "InvoicingStrategy",
              "EntitlementStrategy",
              "MeteringStrategy",
              "SeatStrategy"
            ],
            "properties": {
              "ProrationStrategy": { "type": "string", "enum": ["linear", "none", "always_invoice"] },
              "InvoicingStrategy": { "type": "string", "enum": ["invoice-on-change", "charge-automatically", "send_invoice", "auto"] },
              "EntitlementStrategy": { "type": "string", "enum": ["static"] },
              "MeteringStrategy": { "type": "string", "enum": ["monthly-window"] },
              "SeatStrategy": { "type": "string", "enum": ["pooled-seats"] }
            }
          }
        }
      }
    }
  }
}