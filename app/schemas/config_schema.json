{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Billing Config",
  "type": "object",
  "required": ["payment", "plans"],
  "properties": {
    "label": { "type": "string", "minLength": 1 },
    "payment": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["checkout", "direct"] }
      },
      "additionalProperties": false
    },
    "plans": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["billing"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "billing": {
            "type": "object",
            "required": ["priceId"],
            "properties": {
              "priceId": { "type": "string", "minLength": 1 },
              "cadence": { "type": "string", "enum": ["month", "year"] },
              "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
            },
            "additionalProperties": false
          },
          "trialDays": { "type": "integer", "minimum": 0, "default": 0 },
          "strategies": {
            "type": "object",
            "properties": {
              "ProrationStrategy": { "type": "string", "enum": ["linear", "none", "always_invoice"] },
              "InvoicingStrategy": { "type": "string", "enum": ["charge-automatically", "send_invoice", "auto"] },
              "EntitlementStrategy": { "type": "string", "enum": ["static"] },
              "MeteringStrategy": { "type": "string", "enum": ["monthly-window"] },
              "SeatStrategy": { "type": "string", "enum": ["pooled-seats"] }
            },
            "additionalProperties": false
          },
          "features": {
            "type": "object",
            "properties": {
              "seats": { "type": "integer", "minimum": 0 },
              "limits": {
                "type": "object",
                "additionalProperties": { "type": "number", "minimum": 0 }
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}