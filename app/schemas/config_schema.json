{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "projectId",
    "currency",
    "plans"
  ],
  "properties": {
    "projectId": {
      "type": "string"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "timeZone": {
      "type": "string"
    },
    "billingAnchor": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "anniversary",
            "calendar"
          ]
        }
      },
      "required": [
        "type"
      ]
    },
    "plans": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "cadence",
          "price",
          "strategies"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "cadence": {
            "enum": [
              "monthly",
              "annual"
            ]
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "trial": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "days": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "features": {
            "type": "array"
          },
          "strategies": {
            "type": "object",
            "required": [
              "ProrationStrategy",
              "InvoicingStrategy",
              "EntitlementStrategy"
            ],
            "properties": {
              "ProrationStrategy": {
                "type": "string"
              },
              "InvoicingStrategy": {
                "type": "string"
              },
              "EntitlementStrategy": {
                "type": "string"
              },
              "MeteringStrategy": {
                "type": "string"
              },
              "SeatStrategy": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}